<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pharma_doctor_list" model="ir.ui.view">
        <field name="name">pharma.doctor.list</field>
        <field name="model">pharma.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="specialization"/>
                <field name="city"/>
                <field name="prescription_count"/>
            </list>
        </field>
    </record>

    <record id="view_pharma_doctor_form" model="ir.ui.view">
        <field name="name">pharma.doctor.form</field>
        <field name="model">pharma.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
<button name="%(pharma_management.action_pharma_prescription)d" 
        type="action" 
        class="oe_stat_button" 
        icon="fa-pencil-square-o" 
        context="{'search_default_doctor_id': id}"> <field name="prescription_count" widget="statinfo" string="Prescriptions"/>
</button>

           </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="specialization"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="city"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pharma_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">pharma.doctor</field>
        <field name="view_mode">list,form</field> </record>
</odoo>