<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pharma_wizard_prescription_form" model="ir.ui.view">
        <field name="name">pharma.wizard.prescription.form</field>
        <field name="model">pharma.wizard.prescription</field>
        <field name="arch" type="xml">
            <form string="Generate Prescriptions">
                <group>
                    <group>
                        <field name="representative_id"/>
                        <field name="prescription_date"/>
                    </group>
                    <group>
                        <field name="medicine_id"/>
                        <field name="quantity"/>
                    </group>
                </group>
                <group string="Select Doctors">
                    <field name="doctor_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_generate_prescriptions" string="Generate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pharma_wizard_prescription" model="ir.actions.act_window">
        <field name="name">Prescription Assistant</field>
        <field name="res_model">pharma.wizard.prescription</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>